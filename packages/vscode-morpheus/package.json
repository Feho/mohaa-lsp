{
  "name": "morpheus-vscode",
  "displayName": "Morpheus Script",
  "description": "Full language support for MOHAA Morpheus Script (.scr) - syntax highlighting, completions, hover docs, go-to-definition, debugging, formatting, and validation.",
  "version": "0.2.0",
  "publisher": "Elgan",
  "author": {
    "name": "Elgan Sayer",
    "url": "https://github.com/elgansayer"
  },
  "contributors": [
    {
      "name": "Feho",
      "url": "https://github.com/Feho"
    }
  ],
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elgansayer/mohaa-lsp"
  },
  "bugs": {
    "url": "https://github.com/elgansayer/mohaa-lsp/issues"
  },
  "homepage": "https://github.com/elgansayer/mohaa-lsp#readme",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "morpheus",
    "mohaa",
    "MOHAA",
    "medal of honor",
    "Medal of Honor Allied Assault",
    "Allied Assault",
    "openmohaa",
    "OpenMOHAA",
    "script",
    "scripting",
    ".scr",
    "scr",
    "language server",
    "game modding",
    "tree-sitter"
  ],
  "activationEvents": [
    "onLanguage:morpheus",
    "onDebug",
    "onDebugResolve:openmohaa"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "morpheus",
        "aliases": [
          "Morpheus Script",
          "morpheus",
          "scr"
        ],
        "extensions": [
          ".scr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "morpheus",
        "scopeName": "source.morpheus",
        "path": "./syntaxes/morpheus.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Morpheus Script",
      "properties": {
        "morpheus.gameVersion": {
          "scope": "resource",
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "AA",
              "SH",
              "BT",
              "Reborn",
              "NightFall"
            ]
          },
          "default": [
            "AA",
            "SH",
            "BT"
          ],
          "description": "Game versions to enable completions for (affects available commands)"
        },
        "morpheus.validation.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Morpheus script validation"
        },
        "morpheus.validation.mfusePath": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Path to mfuse_exec executable for advanced script validation"
        },
        "morpheus.validation.trigger": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "onSave",
            "onChange",
            "disabled"
          ],
          "default": "onSave",
          "description": "When to run external validation: onSave, onChange, or disabled"
        },
        "morpheus.formatting.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Morpheus script formatting"
        },
        "morpheus.paths.commandsJson": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Custom path to commands.json file. If empty, uses the bundled file."
        },
        "morpheus.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    },
    "debuggers": [
      {
        "type": "openmohaa",
        "label": "OpenMOHAA Debugger",
        "languages": [
          "morpheus"
        ],
        "configurationAttributes": {
          "attach": {
            "properties": {
              "port": {
                "type": "number",
                "description": "Port number to connect to (default: 4711)",
                "default": 4711
              },
              "host": {
                "type": "string",
                "description": "Host address to connect to (default: localhost)",
                "default": "localhost"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "openmohaa",
            "request": "attach",
            "name": "Attach to OpenMOHAA",
            "port": 4711,
            "host": "localhost"
          }
        ],
        "configurationSnippets": [
          {
            "label": "OpenMOHAA: Attach",
            "description": "Attach to running OpenMOHAA game for script debugging",
            "body": {
              "type": "openmohaa",
              "request": "attach",
              "name": "Attach to OpenMOHAA",
              "port": 4711,
              "host": "localhost"
            }
          }
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "morfuse",
        "required": [
          "action"
        ],
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "validate"
            ],
            "description": "The morfuse action to run"
          },
          "path": {
            "type": "string",
            "description": "Path to validate (defaults to workspace)"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "morfuse",
        "owner": "morfuse",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^([EW]): \\((.+), (\\d+)\\):$",
            "severity": 1,
            "file": 2,
            "location": 3
          },
          {
            "regexp": "^[EW]: .+$"
          },
          {
            "regexp": "^[EW]: \\^$"
          },
          {
            "regexp": "^[EW]: \\^~\\^~\\^ .+: (.+)$",
            "message": 1,
            "loop": true
          }
        ]
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node && npm run copy-server",
    "copy-server": "mkdir -p dist/server && cp -r ../morpheus-lsp/dist/* dist/server/",
    "watch": "npm run build -- --watch",
    "package": "npm run build && vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.10",
    "typescript": "^5.3.3"
  }
}
