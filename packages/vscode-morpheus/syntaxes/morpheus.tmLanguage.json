{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Morpheus Script",
  "scopeName": "source.morpheus",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#vectors" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#entities" },
    { "include": "#external-scripts" },
    { "include": "#thread-definitions" },
    { "include": "#variables" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.morpheus",
          "begin": "/\\*\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.block.morpheus",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.double-slash.morpheus",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.morpheus",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.morpheus",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "vectors": {
      "name": "meta.vector.morpheus",
      "begin": "\\(",
      "end": "\\)",
      "patterns": [
        { "include": "#numbers" },
        { "include": "#variables" },
        { "include": "#entities" },
        { "include": "#operators" }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.morpheus",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.morpheus",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.float.morpheus",
          "match": "\\b\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.morpheus",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.null.morpheus",
          "match": "\\b(NULL|NIL)\\b"
        },
        {
          "name": "constant.language.boolean.morpheus",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.morpheus",
          "match": "\\b(if|else|while|for|switch|case|default|try|catch|throw|continue|break|goto|end|End|END|return)\\b"
        },
        {
          "name": "keyword.other.thread.morpheus",
          "match": "\\b(thread|waitthread|wait|waitframe|waitexec|waittill|exec|exec_server)\\b"
        },
        {
          "name": "storage.type.morpheus",
          "match": "\\b(local|level|game|parm|group|self|owner)\\b"
        },
        {
          "name": "storage.type.primitive.morpheus",
          "match": "\\b(bool|entity|float|int|string)\\b"
        },
        {
          "name": "keyword.other.print.morpheus",
          "match": "\\b(print|println|iprintln|iprintlnbold|dprintln|mprint|mprintln|locprint)\\b"
        },
        {
          "name": "keyword.other.array.morpheus",
          "match": "\\b(makearray|makeArray|endarray|endArray|size)\\b"
        },
        {
          "name": "keyword.other.entity.morpheus",
          "match": "\\b(spawn|delete|trigger|remove|kill)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.compound.morpheus",
          "match": "(\\+=|\\-=|\\*=|/=|\\b(append|appendint|appendfloat)\\b)"
        },
        {
          "name": "keyword.operator.increment-decrement.morpheus",
          "match": "(\\+\\+|\\-\\-)"
        },
        {
          "name": "keyword.operator.comparison.morpheus",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.morpheus",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.morpheus",
          "match": "(&|\\||\\^|~)"
        },
        {
          "name": "keyword.operator.arithmetic.morpheus",
          "match": "(\\+|\\-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.morpheus",
          "match": "="
        },
        {
          "name": "keyword.operator.constarray.morpheus",
          "match": "::"
        },
        {
          "name": "keyword.operator.subscript.morpheus",
          "match": "(\\[|\\])"
        }
      ]
    },
    "entities": {
      "patterns": [
        {
          "name": "variable.other.entity.morpheus",
          "match": "\\$[a-zA-Z0-9_]+"
        },
        {
          "name": "variable.other.entity.dynamic.morpheus",
          "begin": "\\$\\(",
          "end": "\\)",
          "patterns": [
            { "include": "#strings" },
            { "include": "#variables" }
          ]
        }
      ]
    },
    "external-scripts": {
      "patterns": [
        {
          "match": "([a-zA-Z0-9_\\./]+)::([a-zA-Z0-9_]+)",
          "captures": {
            "1": { "name": "entity.name.type.script-path.morpheus" },
            "2": { "name": "entity.name.function.external-label.morpheus" }
          }
        }
      ]
    },
    "thread-definitions": {
      "patterns": [
        {
          "match": "^([a-zA-Z_@#'][a-zA-Z0-9_@#'-]*)\\s*((?:(?:local|group)\\.\\w+\\s*)*)(:)",
          "captures": {
            "1": { "name": "entity.name.function.morpheus" },
            "2": { "name": "variable.parameter.morpheus" },
            "3": { "name": "punctuation.definition.function.morpheus" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.language.scope.morpheus",
          "match": "\\b(local|level|game|group|parm|self|owner)\\b(?=\\.)"
        },
        {
          "match": "\\b(local|level|game|group|parm|self|owner)\\.(\\w[\\w@#'-]*)\\b",
          "captures": {
            "1": { "name": "variable.language.scope.morpheus" },
            "2": { "name": "variable.other.morpheus" }
          }
        },
        {
          "name": "variable.other.property.morpheus",
          "match": "\\.[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.morpheus",
          "match": "\\b(abs|activate|actor|anim|bind|cache|cansee|centertprint|clearfade|clip_add|clip_empty|clip_fill|createlistener|cuecamera|detach|earthquake|findenemy|fullheal|getboundkey1|getboundkey2|getcvar|getentbyentnum|giveweapon|glue|hide|huddraw_align|huddraw_alpha|huddraw_color|huddraw_font|huddraw_rect|huddraw_shader|huddraw_string|huddraw_virtualsize|ihuddraw_align|ihuddraw_alpha|ihuddraw_color|ihuddraw_font|ihuddraw_rect|ihuddraw_shader|ihuddraw_string|ihuddraw_virtualsize|letterbox|loc_convert_string|loopsound|playsound|print3d|random|randomfloat|randomint|releaseplayer|respawn|setcvar|show|stopsound|stuffcmd|unglue|vector_add|vector_cross|vector_dot|vector_length|vector_normalize|vector_scale|vector_subtract|vector_toangles|vector_within)\\b"
        }
      ]
    }
  }
}
