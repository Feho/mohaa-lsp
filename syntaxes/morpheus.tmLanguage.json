{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Morpheus Script",
  "scopeName": "source.morpheus",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#variables" },
    { "include": "#entities" },
    { "include": "#functions" },
    { "include": "#thread-definitions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.morpheus",
          "match": "//.*$"
        },
        {
          "name": "comment.block.morpheus",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.block.documentation.morpheus",
          "begin": "/\\*\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.morpheus",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.morpheus",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.morpheus",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.morpheus",
          "match": "\\b\\d*\\.\\d+\\b|\\b\\d+\\.\\d*\\b"
        },
        {
          "name": "constant.numeric.integer.morpheus",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.morpheus",
          "match": "\\b(if|else|for|while|switch|case|default|try|catch|throw|continue|break|goto|end)\\b"
        },
        {
          "name": "storage.type.morpheus",
          "match": "\\b(bool|entity|float|int|string)\\b"
        },
        {
          "name": "constant.language.morpheus",
          "match": "\\b(NIL|true|false)\\b"
        },
        {
          "name": "keyword.other.thread.morpheus",
          "match": "\\b(thread|waitthread|exec|waitexec)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.morpheus",
          "match": "\\+\\=|-\\=|\\*\\=|/\\=|\\="
        },
        {
          "name": "keyword.operator.comparison.morpheus",
          "match": "\\=\\=|!\\=|<\\=|>\\=|<|>"
        },
        {
          "name": "keyword.operator.logical.morpheus",
          "match": "\\&\\&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.morpheus",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.constarray.morpheus",
          "match": "::"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.language.scope.morpheus",
          "match": "\\b(local|level|game|group|parm|self|owner)\\b(?=\\.)"
        },
        {
          "match": "\\b(local|level|game|group|parm|self|owner)\\.(\\w[\\w@#'-]*)\\b",
          "captures": {
            "1": { "name": "variable.language.scope.morpheus" },
            "2": { "name": "variable.other.morpheus" }
          }
        }
      ]
    },
    "entities": {
      "patterns": [
        {
          "match": "\\$([\\w@#'][\\w@#'-]*)",
          "captures": {
            "0": { "name": "variable.other.entity.morpheus" }
          }
        },
        {
          "begin": "\\$\\(",
          "end": "\\)",
          "name": "variable.other.entity.dynamic.morpheus",
          "patterns": [
            { "include": "#strings" },
            { "include": "#variables" }
          ]
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.morpheus",
          "match": "\\b(abs|activate|actor|anim|bind|cache|cansee|centertprint|clearfade|clip_add|clip_empty|clip_fill|createlistener|cuecamera|delete|detach|dprintln|earthquake|end|endArray|exec|fade|findenemy|fullheal|getboundkey1|getboundkey2|getcvar|getentbyentnum|giveweapon|glue|goto|hide|huddraw_align|huddraw_alpha|huddraw_color|huddraw_font|huddraw_rect|huddraw_shader|huddraw_string|huddraw_virtualsize|ihuddraw_align|ihuddraw_alpha|ihuddraw_color|ihuddraw_font|ihuddraw_rect|ihuddraw_shader|ihuddraw_string|ihuddraw_virtualsize|iprintln|iprintlnbold|kill|letterbox|loc_convert_string|locprint|loopsound|makearray|makearray|mprint|mprintln|playsound|print|print3d|println|random|randomfloat|randomint|releaseplayer|remove|respawn|setcvar|show|spawn|stopsound|stuffcmd|thread|trigger|unglue|vector_add|vector_cross|vector_dot|vector_length|vector_normalize|vector_scale|vector_subtract|vector_toangles|vector_within|wait|waitexec|waitframe|waittill|waitthread)\\b"
        }
      ]
    },
    "thread-definitions": {
      "patterns": [
        {
          "match": "^([\\w@#'][\\w@#'-]*)\\s*((?:(?:local|group)\\.\\w+\\s*)*)(:)",
          "captures": {
            "1": { "name": "entity.name.function.morpheus" },
            "2": { "name": "variable.parameter.morpheus" },
            "3": { "name": "punctuation.definition.function.morpheus" }
          }
        }
      ]
    }
  }
}
